---
import { ContainerTitle } from "./index.astro";

const { title = "", icons = [], isCentered = false } = Astro.props;
---

<section class="icons-list" class:list={[{ "is-centered": isCentered }]}>
  <ContainerTitle title={title} secondaryColour />

  <ul class="max-w-3xl flex flex-wrap items-start p-0 mx-auto">
    {
      icons.map((icon) => (
        <li>
          <a href={icon.url} target="_blank">
            {icon.icon ? <img src={icon.icon} alt={icon.name} /> : icon.name}
            <span class="sr-only">{icon.name}</span>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style lang="scss" scoped>
  ul {
    width: 100%;
    list-style: none;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-gap: 3em;
    padding: 0;
    margin-top: 3em;
    justify-content: center;
    align-items: center;

    @media screen and (max-width: 767px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 1.5em;
    }

    li {
      img {
        -webkit-filter: grayscale(100%);
        filter: grayscale(100%);
        max-width: 150px;

        &:hover {
          filter: unset;
        }
      }
    }
  }
</style>
